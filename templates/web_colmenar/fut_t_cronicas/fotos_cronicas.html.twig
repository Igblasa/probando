{# templates/web_colmenar/fut_t_cronicas/cronicas_fotos.html.twig #}

{% extends 'base.html.twig' %}

{% block title %} {{ title_general }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row justify-content-center">
        <div class="col-11">
            <h1 class="mb-4">CRÓNICAS</h1>
            <form id="form-eliminar-cronicas" method="post" action="{{ path('app_fut_t_cronicas_eliminar_imagenes') }}">
                <div class="table-responsive">
                    <table class="table" id="tbl-cronicas">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Equipo</th>
                                <th>Rival</th>
                                <th>Horario</th>
                                <th>Imagen</th>
                                <th class="text-center">
                                    {% if cronicasConImagenes is not empty %}
                                        <a href="#" class="btn btn-link" id="btn-seleccionar-todos">Seleccionar Todos</a>
                                        <br>
                                    {% endif %}
                                    Eliminar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for cronica in cronicasConImagenes %}
                                <tr>
                                    <td>{{ cronica.fecha|date('d-m-Y') }}</td>
                                    {% if cronica.local == 'no' %}
                                        <td>{{ cronica.rival }}</td>
                                        <td>{{ cronica.equipo }}</td>
                                    {% else %}
                                        <td>{{ cronica.equipo }}</td>
                                        <td>{{ cronica.rival }}</td>
                                    {% endif %}
                                    <td>{{ cronica.horario|date('H:i') }}</td>
                                    <td><img src="{{ app.request.getSchemeAndHttpHost() ~ asset(imagenes_cronicas_url_base ~ cronica.ruta) }}" alt="Imagen" style="width: 100px; height: auto;"></td>
                                    <td class="text-center">
                                        <input type="checkbox" name="eliminar[]" value="{{ cronica.id_imagen }}">
                                    </td>
                                </tr>
                            {% else %}
                                <!-- No es necesario un mensaje aquí, DataTables lo manejará -->
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <button type="button" class="btn btn-danger" id="btn-eliminar-cronicas">Eliminar Seleccionadas</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal de Confirmación -->
    <div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-labelledby="confirmarEliminarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmarEliminarModalLabel">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar las imágenes seleccionadas?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmarEliminarBtn">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script>
        jQuery(document).ready(function ($) {
            $('#tbl-cronicas').DataTable({
                searching: true,
                paging: false,
                order: [],
                language: {
                    emptyTable: "No se encontraron registros"
                }
            });

            $('#btn-seleccionar-todos').click(function (e) {
                e.preventDefault();
                $('input[name="eliminar[]"]').prop('checked', true);
            });

            $('#btn-eliminar-cronicas').click(function () {
                var ids = [];
                $('input[name="eliminar[]"]:checked').each(function () {
                    ids.push($(this).val());
                });

                if (ids.length > 0) {
                    $('#confirmarEliminarModal').modal('show');
                } else {
                    alert('No hay crónicas seleccionadas para eliminar.');
                }
            });

            $('#confirmarEliminarBtn').click(function () {
                $('#form-eliminar-cronicas').submit();
            });
        });
    </script>
{% endblock %}
