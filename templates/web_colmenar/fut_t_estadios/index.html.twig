{% extends 'base.html.twig' %}

{% block title %} {{ title_general }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row justify-content-center">
        <div class="col-11">
            <h1 class="mb-4">Usuarios</h1>
            <p><a href="{{ path('app_fut_t_estadios_new') }}" class="btn btn-danger">Crear Estadio</a></p>
            <div class="table-responsive">
                <table class="table" id="tbl-estadios">
                    <thead>
                        <tr>
                            <th>Id_estadio</th>
                            <th>Nombre_estadio</th>
                            <th>Direccion</th>
                            <th>Codigo_fed</th>
                            <th>Nombre_fed</th>
                            <th>Direccion_fed</th>
                            <th>Codigo_postal_fed</th>
                            <th>Provincia_fed</th>
                            <th>Localidad_fed</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for fut_t_estadio in fut_t_estadios %}
                            <tr>
                                <td>{{ fut_t_estadio.idEstadio }}</td>
                                <td>{{ fut_t_estadio.nombreEstadio }}</td>
                                <td>{{ fut_t_estadio.direccion }}</td>
                                <td>{{ fut_t_estadio.codigoFed }}</td>
                                <td>{{ fut_t_estadio.nombreFed }}</td>
                                <td>{{ fut_t_estadio.direccionFed }}</td>
                                <td>{{ fut_t_estadio.codigoPostalFed }}</td>
                                <td>{{ fut_t_estadio.provinciaFed }}</td>
                                <td>{{ fut_t_estadio.localidadFed }}</td>
                                <td>
                                    <a class="btn btn-sm btn-success my-2 mx-2" href="{{ path('app_fut_t_estadios_edit', {'id_estadio': fut_t_estadio.idEstadio}) }}">Editar</a>
                                    {{ include('web_colmenar/fut_t_estadios/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script>
        
        jQuery(document).ready(function ($) {
            
            $('#tbl-estadios').DataTable({
                searching: true,
            });
            
        })
        
    </script>
    
{% endblock %}
