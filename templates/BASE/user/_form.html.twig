{{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.username, 'Username') }}
        {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.roles, 'Roles') }}
        {{ form_widget(form.roles, { 'attr': {'class': 'form-control', 'multiple': 'multiple'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.password, 'Password') }}
        {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'value': 'pass_de_prueba'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.is_active, 'Is Active') }}
        {{ form_widget(form.is_active, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.salt, 'Salt') }}
        {{ form_widget(form.salt, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
