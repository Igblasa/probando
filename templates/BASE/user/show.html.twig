{% extends 'base.html.twig' %}

{% block title %} {{ title_general }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <h1>User</h1>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <table class="table">
          <tbody>
            <tr>
              <th>Id</th>
              <td>{{ user.id }}</td>
            </tr>
            <tr>
              <th>Username</th>
              <td>{{ user.username }}</td>
            </tr>
            <tr>
              <th>Roles</th>
              <td>
                {% for role in user.roles %}
                  {{ role }} -
                {% endfor %}
              </td>
            </tr>
            <tr>
              <th>Password</th>
              <td>{{ user.password }}</td>
            </tr>
            <tr>
              <th>Is Active</th>
              <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
              <th>Salt</th>
              <td>{{ user.salt }}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('BASE/user/_delete_form.html.twig') }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}