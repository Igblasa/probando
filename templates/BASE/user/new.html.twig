{% extends 'base.html.twig' %}

{% block title %} {{ title_general }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container">
        
        <div class="row">
            <h1>Create new User</h1>

            <div class="col-md-6">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.username, 'Username') }}
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.roles, 'Roles') }}
                    {{ form_widget(form.roles, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.password, 'Password') }}
                    {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group form-check">
                    {{ form_widget(form.is_active, { 'attr': {'class': 'form-check-input'} }) }}
                    {{ form_label(form.is_active, 'Active', { 'label_attr': {'class': 'form-check-label'} }) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.salt, 'Salt') }}
                    {{ form_widget(form.salt, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to list</a>

                {{ form_end(form) }}
            </div>
        </div>


        <hr>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}